@page
@model ApplicationInsightsDemo.UI.Pages.ExpenseModel
@{
}

<div class="container">
    <form method="post">
        <div class="form-group">
            <label asp-for="@Model.EmployeeName"></label>
            <input asp-for="@Model.EmployeeName" class="form-control" />
            <span asp-validation-for="@Model.EmployeeName" class="invalid-feedback"></span>
        </div>
        <div class="form-group">
            <label asp-for="@Model.Amount"></label>
            <input asp-for="@Model.Amount" class="form-control" />
            <span asp-validation-for="@Model.Amount" class="invalid-feedback"></span>
        </div>
        <div class="form-group">
            <label asp-for="@Model.Description"></label>
            <input asp-for="@Model.Description" class="form-control" />
            <span asp-validation-for="@Model.Description" class="invalid-feedback"></span>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>